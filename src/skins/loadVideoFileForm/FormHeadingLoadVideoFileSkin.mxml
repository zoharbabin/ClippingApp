<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.FormHeading")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="normal" />
	</s:states>
	
	<!-- background -->
	<s:Rect width="100%" height="100%" radiusY="4" >
		<s:filters>
			<s:DropShadowFilter blurX="5" blurY="5" alpha="0.55" distance="0" angle="90" />
			<s:DropShadowFilter blurX="6" blurY="6" alpha="0.17" distance="0" angle="90" inner="true" />
		</s:filters>
		<s:stroke>
			<s:SolidColorStroke color="0x9aa9b9" weight="2" alpha="0.1"/>
		</s:stroke>
		<s:fill>
			<s:LinearGradient rotation="90" interpolationMethod="rgb" spreadMethod="pad">
				<s:GradientEntry color="0x4d4d4e" />
				<s:GradientEntry color="0x0d0d0d" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<s:HGroup verticalAlign="middle">
		<s:Label id="labelDisplay" width="100%" height="100%"
				 paddingTop="18" paddingLeft="10"
				 paddingBottom="10" 
				 color="0xffffff" fontWeight="bold" fontSize="22" fontFamily="Trebuchet MS" />
	</s:HGroup>
	
	<!-- SkinParts
	name=labelDisplay, type=spark.core.IDisplayText, required=false
	name=labelDisplay, type=spark.core.IDisplayText, required=false
	-->
</s:Skin>
